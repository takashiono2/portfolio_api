<%= form_tag csv_import_users_path, method: :post, multipart: true do %>
  <div class="input-group">
      <%= button_tag 'ファイル選択', class: "btn btn-secondary btn-sm" ,type: 'button', onclick: "$('#file_input').click();" %>
      <%= file_field_tag :file ,id: "file_input",style: "display: none;",onchange: "file_selected($(this));"%><!--display: none;にしてlabel側でデザイン-->
      <%= text_field_tag 'filename',"",{id: "filename", disabled: true ,style: "width: 198px; height: 32px;"} %><!--readonlyではクリックに反応するので、disabled: true,-->
        <div class="csv_submit" >
          <%= submit_tag "CSVをインポート",class: "btn btn-info btn-sm w-25" %>
        </div>
  </div>
<% end %>

<script type="text/javascript">
  function file_selected(file_field){
    var filename = $(file_field)[0].files[0].name;
    $("#filename").val(filename);
  }
</script>

